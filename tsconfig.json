{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@database/*": ["src/database/*"],
      "@layouts/*": ["src/layouts/*"],
      "@objects/*": ["src/objects/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
    }
  },
  "include": ["src/**/*"]
}
