{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@api/*": ["src/backend/api/*"],
      "@repositories/*": ["src/backend/repositories/*"],
      "@routes/*": ["src/backend/routes/*"],
      "@services/*": ["src/backend/services/*"],
      "@collections/*": ["src/common/collections/*"],
      "@models/*": ["src/common/models/*"],
      "@utilities/*": ["src/common/utilities/*"],
      "@components/*": ["src/frontend/components/*"],
      "@contexts/*": ["src/frontend/contexts/*"],
      "@layouts/*": ["src/frontend/layouts/*"],
      "@pages/*": ["src/frontend/pages/*"],
      "@scripts/*": ["src/frontend/scripts/*"],
    }
  },
  "include": ["src/**/*"]
}
